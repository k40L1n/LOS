
{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif

  if section.index > 2
    assign loading = "lazy"
  else
    assign loading = "eager"
  endif
-%}

<section class="los-banner">
     <div class="los-banner--image">
       {{
        section.settings.image_desktop
        | image_url: width: 1440
        | image_tag:
          widths: '300, 600',
          sizes: 'auto',
          fetchpriority: fetch_priority,
          loading: loading,
          class: 'img-fluid'
      }}
     </div>
     <div class="los-banner--content">
      <div class="los-info">

        {% if section.settings.heading != blank %}
          <h1>{{ section.settings.heading }}</h1>
        {% endif %}

          {% if section.settings.sub_heading != blank %}
           <p class="font-light">{{ section.settings.sub_heading }}</p>
          {% endif %}

          {% if section.settings.url != blank %}
           <a href="{{ section.settings.url }}" class="btn">
            {{ section.settings.url_text }}
           </a>
          {% endif %}
          
      </div>
     </div>
</section>

{% schema %}
{
  "name": "LOS Image Banner",
  "tag": "section",
  "class": "los-image-banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Banner Image - Desktop"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Banner Image - Mobile"
    },
    {   
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Worldâ€™s First Personalised Ayurvedic Solution"
    },
    {   
      "type": "text",
      "id": "sub_heading",
      "label": "Sub Heading",
      "default": "Get a personalised solution kit formulated by Ayurvedic Experts"
    },
    {   
      "type": "url",
      "id": "url",
      "label": "Add a Link"
    },
    {   
      "type": "text",
      "id": "url_text",
      "label": "Button text",
      "default": "Begin Quiz"
    }
  ],
   "presets": [
    {
      "name": "LOS Image Banner"
    }
  ]
}

{% endschema %}


{% stylesheet %}

.img-fluid{
  height: auto;
  max-width: 100%;
}

.los-banner {
  display: flex;
  position: relative;
  flex-direction: column;
}

.los-banner--image img{
  width: 100%;
  max-height: 760px;
  height: 100%;
  object-fit: cover;
}

.los-banner--content {
  position: absolute;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}

.los-banner--content div{
    max-width: 1000px;
    margin: 0 auto;
}

.los-banner--content a {
   place-self: self-start;
   display: inline-block;
   margin-top: 20rem;
}

{% endstylesheet %}

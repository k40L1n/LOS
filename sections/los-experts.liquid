{% stylesheet %}
 

.expert{
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 720px;
  height: 100%;
  background-repeat: no-repeat;
  background-size: cover;
}
.expert-box{
    display: grid;
    width: 450px;
    border: 1px solid var(--black);
    grid-template-columns: 1.5fr 2.5fr;
    grid-template-areas: 
    "image expert expert"
    "image expert expert"
    "info info info";
}

.expert-box--image {
  grid-area: image;
  border: 1px solid var(--black);
  border-left: 0px;
  border-top: 0;
}

.expert-box--image img {
  height: 100%;
  object-fit: cover;
}

.expert-box--expert {
  grid-area: expert;
  border: 1px solid var(--black);
  border-left: 0px;
  border-top: 0;
  border-right: 0;
  background-color: var(--white);
}


.expert-box--info {
  grid-area: info;
  background-color: var(--white);
  padding: 1rem;
}
{% endstylesheet %}
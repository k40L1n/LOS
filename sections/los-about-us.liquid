    </div>
    <div class="about-us--image"> 
     {{
        section.settings.image_desktop
        | image_url: width: 1440
        | image_tag:
          widths: '300, 600',
          sizes: 'auto',
          fetchpriority: fetch_priority,
          loading: loading,
          class: 'img-fluid'
      }}
    </div>
</section>


{% schema %}
{
  "name": "LOS About Us",
  "tag": "section",
  "class": "los-about-us",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Banner Image - Desktop"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Banner Image - Mobile"
    },
    {   
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Worldâ€™s First Personalised Ayurvedic Solution"
    },
    {   
      "type": "text",
      "id": "sub_heading",
      "label": "Sub Heading",
      "default": "Get a personalised solution kit formulated by Ayurvedic Experts"
    },
    {   
      "type": "url",
      "id": "url",
      "label": "Add a Link"
    },
    {   
      "type": "text",
      "id": "url_text",
      "label": "Button text",
      "default": "Begin Quiz"
    }
  ],
   "presets": [
    {
      "name": "LOS About Us"
    }
  ]
}

{% endschema %}



{% stylesheet %}
    .about-us{
        gap: 4rem;
        display: grid;
        grid-template-columns: 70rem 50rem;
    }
    .about-us--content {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
    .about-us--free-from {
        display: grid;
        grid-template-columns: repeat(4,1fr);
        grid-template-rows: repeat(2,1fr);
    }
{% endstylesheet %}
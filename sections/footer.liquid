{% stylesheet %}
  
  
  .footer-brand{
    font-size: 2rem;
  }
  .footer-copyright{
    font-size: 1.4rem;
    margin: 1.5rem 0;
  }

  .footer-links a {
    font-size: 1.4rem;
    text-decoration: underline;  
    color: var(--black);
  }

  .footer-contact-us a, .footer-contact-us p{
    font-size:1.4rem;
    display: flex;
    align-items: center;
    color: var(--black);
    margin: 10px 0;
  }

  .footer-contact-us svg {
    margin-right: 10px;
  }

  .shopify-section-group-footer-group {
    background-color: var(--light-gray);
    padding: 20px;
  }

  .footer{
    display: grid;
    grid-template-columns: 4fr 1fr 1fr;
    
  }
  .footer-links ul li {
    padding-left: 0;
  }


  .social-icons a {
    display: inline-block;
    height: 32px;
    width: 32px;
  }

  .social-icons a svg {
    height: 100%;
    width: 100%;
  }


  @media screen and (min-width: 768px) {
     .shopify-section-group-footer-group {
      padding: 40px 0;
    }
  }
  
  

{% endstylesheet %}